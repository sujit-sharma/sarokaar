<div class="wrapper">
    <%- include('../partials/messages.ejs') %>
    
    <h1>Sar<span class="text-success">ok</span>aar</h1>
    <form action="/admin/register" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <i class="fas fa-user-tie"></i>
            <input type="text" 
            name='uname'
            placeholder="uname"
            value="<%= typeof uname != 'undefined' ? uname : '' %>">
        </div>
        <div class="form-group">
            <i class="fas fa-user-tie"></i>
            <input type="text" 
            name='email'
            placeholder="email"
            value="<%= typeof email != 'undefined' ? email : '' %>">
        </div>
        <div class="form-group">
            <i class="fas fa-user-tie"></i>
            <input type="text" 
            name='citizenship'
            placeholder="citizenship"
            value="<%= typeof citizenship != 'undefined' ? citizenship : '' %>">
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input type="password" 
            name='password'
            placeholder="password">
            <i class="fas fa-eye eyes"></i>
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input type="password" 
            name='cpassword'
            placeholder="confirm password">
            <i class="fas fa-eye eyes"></i>
        </div>

        <div class="form-group">
          <input type="file" name="pic">
        </div>

        <input type="submit" value="register" class="btn btn-success btn-block">
        <input type="hidden" name="token" value="<%= token %>">
        <input type="hidden" name="id" value="<%= id %>">
    </form>
</div>