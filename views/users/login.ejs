<div class="row">
  <div class="col-md-8 m-auto text-center">
    <img src="/images/assets/slogo-2.png" style="height:auto;width:35px;" />
    <h1>Sar<span class="text-success">ok</span>aar</h1>
    <p class="lead">We do listen to your concerns.</p>
  </div>
</div>

<%- include('../partials/messages.ejs') %>

<div class="row mb-5">
  <div class="col-md-8 m-auto text-center">
    <div class="card card-body">
      <form action="/user/home" method="POST">
        <div class="form-group bx">
          <i class="fas fa-user-circle"></i>
          <input
            type="text"
            name="email"
            placeholder="email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            class="transparent"
          />
        </div>
        <div class="form-group bx">
          <i class="fas fa-key"></i>
          <input
            type="password"
            name="password"
            placeholder="password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            class="transparent"
          />
        </div>
        <input type="submit" value="login" class="btn btn-primary" />
      </form>
      <div class="text-left">
        <a href="/user/forgot-password" class="text-dark">Forgot Password?</a>
      </div>
    </div>
  </div>
</div>
